<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.customer_update"
    android:orientation="vertical"
    android:background="@drawable/imag_">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Customer Update"
                android:textColor="#fff"
                android:textSize="40dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Id"
                android:textColor="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cus_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"
                android:textColorHint="#ffff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Customer Name"
                android:textColor="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cus_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"
                android:textColorHint="#ffff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Profession"
                android:textColor="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cus_profe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"

                android:textColorHint="#ffff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Parent Id"
                android:textColor="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cus_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"
                android:textColorHint="#ffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Password"
                android:textColor="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cus_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"
                android:inputType="textPassword"
                android:textColorHint="#ffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Email"
                android:textColor="#fff"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/cus_emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"
                android:inputType="textEmailAddress"
                android:textColorHint="#ffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Mobile No"
                android:textColor="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cus_usermobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"

                android:inputType="phone"
                android:textColorHint="#ffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/cus_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"
                android:entries="@array/spinnergender"
                android:textColor="#fff">

            </Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Address"
                android:textColor="#fff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/cus_addres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/customedittext"
                android:textColor="#fff" />

            <Button
                android:id="@+id/cus_updatebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Update"
                 />


        </LinearLayout>

    </ScrollView>



</LinearLayout>